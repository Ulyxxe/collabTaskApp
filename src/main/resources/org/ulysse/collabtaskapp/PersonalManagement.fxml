<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>

<VBox fx:controller="org.ulysse.collabtaskapp.PersonalManagementController" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1">
   <Label text="Employee Management" />
   <TextField fx:id="employeeNameField" promptText="Employee Name"/>
   <TextField fx:id="employeeRoleField" promptText="Employee Role"/>
   <Button text="Create Employee" onAction="#CreateEmployee"/>
   <Label text="Employee List" />
   <ListView fx:id="employeeListView"/>
</VBox>
